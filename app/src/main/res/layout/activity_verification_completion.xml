<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerificationCompletion">

    <ImageView
        android:id="@+id/logo"
        android:transitionName="logo_tr"
        android:layout_width="150dp"
        android:layout_height="136dp"
        android:layout_marginTop="128dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/enso" />

    <ImageView
        android:id="@+id/circle_1"
        android:layout_width="194dp"
        android:layout_height="203dp"
        android:layout_marginEnd="308dp"
        android:alpha="0.4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/circle_shape" />

    <ImageView
        android:id="@+id/circle_2"
        android:layout_width="194dp"
        android:layout_height="203dp"
        android:layout_marginEnd="220dp"
        android:layout_marginBottom="780dp"
        android:alpha="0.4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/circle_shape" />

    <TextView
        android:id="@+id/verification_msg"
        android:layout_width="358dp"
        android:layout_height="119dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/elmessiri_bold"
        android:gravity="center"
        android:text="A verifivation mail has been sent to your Email Address. Please verify your email and then click on continue to go to the Profile Setup Page."
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <Button
        android:id="@+id/continue_btn"
        android:layout_width="332dp"
        android:layout_height="62dp"
        android:layout_marginBottom="192dp"
        android:backgroundTint="#00BFA6"
        android:fontFamily="@font/elmessiri_bold"
        android:text="Continue"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verification_msg"
        app:layout_constraintVertical_bias="0.493" />
</androidx.constraintlayout.widget.ConstraintLayout>